{
  "exclude": [
    "../node_modules/@types/jest",
    "../node_modules/@testing-library/jest-dom"
  ],
  "include": [
    "e2e/**/*",
    "support/**/*",
    "../node_modules/cypress",
    "../node_modules/@testing-library/cypress"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": ["node", "cypress", "@testing-library/cypress"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "es2019",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["../types", "../node_modules/@types"],
    "paths": {
      "~/*": ["./app/*"],
      "@my-company/ui/*": ["../../packages/ui/src/*"],
      "@my-company/ui": ["../../packages/ui/src/index"],
      "@my-company/business/*": ["../../packages/business/src/*"],
      "@my-company/business": ["../../packages/business/src/index"],
      "@my-company/internal-nobuild": ["../../packages/internal-nobuild/src/index"],
      "@my-company/internal-nobuild/*": ["../../packages/internal-nobuild/src/*"],
    },
  },
  "ts-node": {
    "swc": true
  }
}
